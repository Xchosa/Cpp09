{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: g++ build and debug PmergeMe",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/ex01/RPN",			// ← Pfad zum Binary
      //"args": ["1 1 1 1 + + + " ],
       "args": ["1 1 1 1 + + + 0 / 1 + "],
      "stopAtEntry": false,								// ← Pfad zum Binary
      "cwd": "${workspaceFolder}/ex01",
      "environment": [],
      "externalConsole": false,							// ← Terminal im VS Code
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "execute Makefile ex01"					// ← Task vor Debug ausführen
    }
  ]
}