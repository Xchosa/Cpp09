{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: g++ build and debug PmergeMe",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/ex02/PmergeMe",			// ← Pfad zum Binary
      "args": ["8", "9", "1", "0", "50", "60", "2", "3", "4", "1", "10", "11", "98", "78", "23", "21"],
      "stopAtEntry": false,								// ← Pfad zum Binary
      "cwd": "${workspaceFolder}/ex02",
      "environment": [],
      "externalConsole": false,							// ← Terminal im VS Code
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "execute Makefile ex02"					// ← Task vor Debug ausführen
    }
  ]
}